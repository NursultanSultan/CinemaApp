@model Cinema
@{
    ViewData["Title"] = "Detail";
}

<main>

    <!-- cinema hero start -->

    <section id="cinema_hero">
        <div class="hero-image">
            <img style="width: 100%;height: 720px;" src="~/assets/image/cinehero3.jpg" alt="photo">
        </div>

        <div class="container h-100">
            <div class="cinema_content h-100">
                <h2>@Model.CinemaName</h2>
                <p>
                    @Model.ShortContent
                </p>
            </div>
        </div>
    </section>

    <!-- cinema hero end -->
    <!-- tabs start  -->

    <section id="tabs">

        <div class="tab_header">

            <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="pills-schedule-tab" data-toggle="pill" href="#pills-schedule" role="tab" aria-controls="pills-home" aria-selected="true">Schedule</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-profile" aria-selected="false">Contact </a>
                </li>

            </ul>

        </div>


        <div class="tab_body">

            <div class="tab-content mt-5" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-schedule" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <div class="schedule_list tab_list">

                        <div class="container">

                            

                            <div class="table-responsive">
                                <table class="table table-hover table-dark">
                                    <thead>
                                        <tr>
                                            <th scope="col">Film</th>
                                            <th scope="col">Seans</th>
                                            <th scope="col">Kinoteatr</th>
                                            <th scope="col">Zal</th>
                                            <th scope="col">Format</th>
                                            <th scope="col">Dil</th>
                                            <th scope="col">Qiymet</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>SpiderMan</th>
                                            <td>17 : 00</td>
                                            <td>
                                                <a class="table_link">Ganjlik Mall</a>
                                            </td>
                                            <td>Zal1</td>
                                            <td>
                                                <img style="width:55px;height: 50px;" src="./assets/image/ni_twod.png" alt="">
                                            </td>
                                            <td>
                                                <img style="width:55px;height: 50px;" src="./assets/image/ni_tur.png" alt="">
                                            </td>
                                            <td>8.00 AZN</td>

                                        </tr>


                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-profile-tab">
                    <div class="contact_us tab_list ">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    <div class="contact-items">
                                        <div class="contact-item pt-4">
                                            <h5>Bizim Unvan</h5>
                                            <p>
                                                @Model.OurAdress
                                            </p>
                                        </div>

                                        <div class="contact-item pt-4">
                                            <h5>Telefon</h5>
                                            <p>
                                                @Model.PhoneNumber
                                            </p>
                                        </div>

                                        <div class="contact-item pt-4">
                                            <h5>Elektron Unvan</h5>
                                            <p>
                                                @Model.EMail
                                            </p>
                                        </div>

                                        <div class="contact-item pt-4">
                                            <h5>Marketing Sobesi</h5>
                                            <p>
                                                media@cinemaplus.az
                                            </p>
                                        </div>

                                        <div class="contact-item pt-4">
                                            <h5>İş saatı</h5>
                                            <p>
                                                @Model.WorkingHour
                                            </p>
                                        </div>


                                    </div>


                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12">

                                    @Html.Raw(Model.MapLocation);

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div>

</section>

    <!-- tabs end -->

</main>

