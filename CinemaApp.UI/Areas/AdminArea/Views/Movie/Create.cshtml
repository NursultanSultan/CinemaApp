@model MovieCreateDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-12 m-5 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="MovieName"></label>
                    <input asp-for="MovieName" class="form-control">
                    <span asp-validation-for="MovieName" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <select asp-for="CategoryIds" style="background-color: #2A3038 ; color:#fff" class="form-select mt-3 mb-3" aria-label="Default select example">
                        <option selected>Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id"> @category.CategoryName</option>

                        }
                    </select>
                </div>

                <div class="form-group">

                    <select asp-for="CinemaIds" style="background-color: #2A3038 ; color:#fff" class="form-select mt-3 mb-3" aria-label="Default select example">
                        <option selected>Cinemas</option>
                        @foreach (var cinema in Model.Cinemas)
                        {
                            <option value="@cinema.Id"> @cinema.CinemaName</option>

                        }
                    </select>
                </div>

                <div class="form-group">

                    <select asp-for="LanguageIds" style="background-color: #2A3038 ; color:#fff" class="form-select mt-3 mb-3" aria-label="Default select example">
                        <option selected>Language</option>
                        @foreach (var lang in Model.Languages)
                        {
                            <option value="@lang.Id"> @lang.Lang</option>

                        }
                    </select>
                </div>

                <div class="form-group">

                    <select asp-for="FormatIds" style="background-color: #2A3038 ; color:#fff" class="form-select mt-3 mb-3" aria-label="Default select example">
                        <option selected>Formats</option>
                        @foreach (var format in Model.Formats)
                        {
                            <option value="@format.Id"> @format.FormatType</option>

                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="TrailerUrl"></label>
                    <input asp-for="TrailerUrl" class="form-control">
                    <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AboutContent"></label>
                    <input asp-for="AboutContent" class="form-control">
                    <span asp-validation-for="AboutContent" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImdbPoint"></label>
                    <input asp-for="ImdbPoint" class="form-control">
                    <span asp-validation-for="ImdbPoint" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AgeLimit"></label>
                    <input asp-for="AgeLimit" class="form-control">
                    <span asp-validation-for="AgeLimit" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control">
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Director"></label>
                    <input asp-for="Director" class="form-control">
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Duration"></label>
                    <input asp-for="Duration" class="form-control">
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PosterFile"></label>
                    <input accept="image/" asp-for="PosterFile" class="form-control">
                    <span asp-validation-for="PosterFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BackgroundImgFile"></label>
                    <input accept="image/" asp-for="BackgroundImgFile" class="form-control">
                    <span asp-validation-for="BackgroundImgFile" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Create</button>
                <button asp-controller="Movie" asp-action="Index" class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>

