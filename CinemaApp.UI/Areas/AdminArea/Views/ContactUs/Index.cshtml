
@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messages</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>E-Mail</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Setting</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contactUs in Model)
                        {
                            <tr>

                                <td>@count</td>
                                <td>@contactUs.UserMail</td>
                                <td>@contactUs.Subject</td>
                                <td>@contactUs.Message</td>

                                <td>

                                    <form method="post" asp-action="Delete">
                                        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@contactUs.Id">Remove</button>
                                    </form>

                                </td>

                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


